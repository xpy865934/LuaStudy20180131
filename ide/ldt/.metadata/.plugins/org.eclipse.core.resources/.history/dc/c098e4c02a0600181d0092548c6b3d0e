--函数闭包的方式实现面向对象
function People(name)
    local self = {}
    local  function init()
        self.name = name
    end

    self.sayHi = function ()
        print("People say Hi ".. self.name)
    end

    init()
    return self
end

--继承
function Man(name)
    local self = People(name)
    --    local function init()
    --
    --    end

    self.sayHello = function ()
        print("Man say Hello "..self.name)
    end
    return self
end

local p = People("zhangsan")
p.sayHi()

local m = Man("Lisi")
m.sayHello()

